<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/carrr"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="com.example.nazmul.myfirstapp.WelcomeBar">


    <TextView
        android:id="@+id/textView"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="200dp"
        android:text="Vehicle Tracking"
        android:textColor="#f404d0"

        android:textSize="30dp" />

    <ProgressBar
            android:id="@+id/nasirId"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:progressBackgroundTint="#0def06"
            android:progressTint="#f404d0"
            />


         </LinearLayout>
