<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:gravity="center"
    android:background="@drawable/home"
    tools:context="com.example.nazmul.myfirstapp.SignUpActivity">


    <ImageView

        android:layout_width="247dp"
        android:layout_height="118dp"
        android:src="@drawable/register"
        android:layout_weight="0.13"
        android:padding="10dp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#ffff00"

        >

        <EditText
            android:id="@+id/SignUpNameId"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:hint="Enter name"
            android:ems="10"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_border"
            android:textColor="#ffff00"
            android:inputType="textEmailAddress"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#ffff00"

        >

        <EditText
            android:id="@+id/SignUpPhoneId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_border"
            android:hint="Enter contact number"
            android:ems="10"
            android:textColor="#ffff00"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            />
    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#ffff00"

        >

        <EditText
            android:id="@+id/SignUpEmailId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_border"
            android:hint="Enter email address"
            android:ems="10"
            android:textColor="#ffff00"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#ffff00"
        app:passwordToggleEnabled="true"

        >

        <EditText
            android:id="@+id/SignUpPasswordId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_border"
            android:hint="Enter password"
            android:ems="10"
            android:textColor="#ffff00"
            android:padding="10dp"
            android:inputType="textPassword"
            />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/SignUpId"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="20dp"
        android:background="@drawable/custom_button"

        />
    <TextView
        android:id="@+id/LoginTextViewId"
        android:layout_marginTop="10dp"
        android:textColor="#ffff00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registered? Login"
        android:textSize="20dp"
        />


</LinearLayout>
